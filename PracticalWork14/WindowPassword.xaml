<Window x:Class="PracticalWork14.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork14"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Введите пароль" Height="150" Width="250" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        FontSize="20" Loaded="Window_Loaded">
    <StackPanel>
        <PasswordBox x:Name="password" PasswordChar="*" Margin="5" BorderBrush="#FF464748"></PasswordBox>
        <Button Content="Войти" IsDefault="True" Click="Enter_Click"></Button>
        <Button Content="Отмена" Click="Escape_Click"></Button>
    </StackPanel>
</Window>
